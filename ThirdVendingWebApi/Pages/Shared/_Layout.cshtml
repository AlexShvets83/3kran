                        <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
                    </form>*@
            </div>
        </nav>
    </header>
    <div class="container-fluid">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="footer txt0">
        <div class="container-fluid txt0">
            <p class="text-center txt0">
                <a class="txt0" href="http://3voda.ru" target="top" title="Перейти на сайт компании">© ООО «Торговый дом «Третий кран», 2021-@DateTime.Now.Year</a>
